@model LoginProjeto.Models.SaidaProduto

@{
    ViewData["Title"] = "Delete";
}

<div class="info">
    <h1>Apagar</h1>

    <h3>Tem certeza que deseja apagar isso?</h3>
    <div>
        <h4>Saída do Produto</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Produto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Produto.ProdutoNome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SaidaProdutoData)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SaidaProdutoData)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SaidaProdutoQuantidade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SaidaProdutoQuantidade)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Usuario)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Usuario.UsuarioNome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cliente)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cliente.ClienteNome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TipoSaida)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TipoSaida.TipoSaidaDescricao)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Apagar" class="btn btn-danger" /> |
            <a asp-action="Index">Voltar</a>
        </form>
    </div>

</div>

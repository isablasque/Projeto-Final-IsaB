@model LoginProjeto.Models.Usuario

@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<link href="~/css/login2.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<div class="linha"></div>
<div class="caixa">
    <h1 class="titulo">Login</h1>
    <h4 class="titulo">Digite o email e senha para realizar o login</h4>
    <hr />
    <div >
         <div class="col-md-4">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UsuarioEmail" class="control-label"></label>
                        <input asp-for="UsuarioEmail" class="form-control" />
                        <span asp-validation-for="UsuarioEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsuarioSenha" class="control-label"></label>
                        <input asp-for="UsuarioSenha" class="form-control" />
                        <span asp-validation-for="UsuarioSenha" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                    <input type="submit" value="Entrar" class="btn btn-primary botao" />
                    </div>
                    <br />
                    <h3>@ViewBag.Mensagem</h3>
                </form>
         </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
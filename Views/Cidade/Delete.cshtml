    ViewData["Title"] = "Delete";
}

<div class="info">
    <h1>Apagar</h1>

    <h3>Tem certeza que deseja apagar isso?</h3>
<div>
    <h4>Cidade</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CidadeNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CidadeNome)
        </dd>
        <dt class = "col-sm-2">

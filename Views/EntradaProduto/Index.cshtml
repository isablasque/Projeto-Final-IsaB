@model IEnumerable<LoginProjeto.Models.EntradaProduto>

@{
    ViewData["Title"] = "Index";
}

<div class="info">
    <h1>Entrada de produto</h1>

    <p>
        <a asp-action="Create">Cadastrar entrada de produto</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Produto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EntradaProdutoData)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EntradaProdutoQuantidade)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Produto.ProdutoNome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EntradaProdutoData)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EntradaProdutoQuantidade)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

